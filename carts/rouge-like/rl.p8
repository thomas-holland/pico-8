--tool funcs
function start_game ()
 p_x = 13
 p_y = 6
 p_ox = 0
 p_oy = 0
 p_sox = 0
 p_soy = 0
 p_t=0
end


function player_move ()
 for i=0,3 do
  if btnp(i) then
   p_x+=dirx[i+1]
   p_y+=diry[i+1]
   p_sox=-dirx[i+1]*8
   p_soy=-diry[i+1]*8
   p_ox=p_sox
   p_oy=p_soy
   p_t = 0
   _upd = update_pturn
   return
  end
 end
end


function update_pturn ()
 p_t = min(p_t+0.1,1)
 p_ox = p_sox*(1-p_t)
 p_oy = p_soy*(1-p_t)
 if p_t ==1 then
  _upd = update_game
 end
end


function drawspr(_spr,_x,_y)
 palt(0, false)
 spr(_spr,_x,_y)
 palt(0, true)
end


function get_spr_frame(ani)
 return ani[flr(t/2)%(#ani)+1]
end

