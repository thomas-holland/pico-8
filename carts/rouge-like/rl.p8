--tool funcs
function start_game ()
 p_x = 14
 p_y = 6
 p_ox = 0
 p_oy =0
end


function player_move ()
 if btnp(0) then
  p_x -= 1
  p_ox = 8
  _upd = update_pturn
 end
 if btnp(1) then
  p_x += 1
  p_ox = -8
  _upd = update_pturn
 end
 if btnp(3) then
  p_y += 1
  p_oy = -8
  _upd = update_pturn
 end
 if btnp(2) then
  p_y -= 1
  p_oy = 8
  _upd = update_pturn
 end
end


function update_pturn ()
 if p_ox>0 then
  p_ox -= 0.5
 end
 if p_ox<0 then
  p_ox += 0.5
 end
 if p_oy>0 then
  p_oy -= 0.5
 end
 if p_oy<0 then
  p_oy += 0.5
 end



 if p_ox ==0 and p_oy ==0 then
  _upd = update_game
 end
end


function drawspr(_spr,_x,_y)
 palt(0, false)
 spr(_spr,_x,_y)
 palt(0, true)
end


function get_spr_frame(ani)
 return ani[flr(t/2)%(#ani)+1]
end

